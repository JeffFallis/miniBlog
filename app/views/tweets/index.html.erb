<%= form_with(model: @tweet, local: true) do |form| %>
  <p id="notice"><%= notice %></p>

  <h1>Tweets</h1>

  <%= render 'form', tweet: @tweet %>

  <table>
    <thead>
      <tr>
        <th>Userid</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet.UserID %></td>
          <td><%= tweet.Content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'My tweets', tweets_list_path %>
  <%= link_to 'Back', static_pages_home_path %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>

<% end %>
